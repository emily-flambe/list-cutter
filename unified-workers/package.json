{
  "name": "list-cutter-unified-workers",
  "version": "1.0.0",
  "description": "Unified Cloudflare Workers implementation serving both frontend and backend for List Cutter",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "vite build --config vite.config.frontend.ts",
    "build:worker": "tsc && node build.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration", 
    "test:e2e": "playwright test",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:security": "vitest run tests/security",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "analyze-bundle": "node scripts/analyze-bundle.js"
  },
  "dependencies": {
    "hono": "^4.6.11",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.4.6",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@cloudflare/vitest-pool-workers": "^0.8.49",
    "@playwright/test": "^1.53.2",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "artillery": "^2.0.9",
    "eslint": "^9.15.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.1",
    "wrangler": "^3.89.0",
    "vite": "^6.0.1"
  },
  "author": "List Cutter Team",
  "license": "MIT"
}