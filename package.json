{
  "name": "list-cutter-monorepo",
  "private": true,
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "npm run build:workers & npm run build:frontend & wait",
    "build:workers": "cd cloudflare/workers && npm run build",
    "build:frontend": "cd app/frontend && npm run build",
    "tsc:build": "tsc --build",
    "tsc:clean": "tsc --build --clean",
    "tsc:watch": "tsc --build --watch",
    "dev": "npm run dev:workers & npm run dev:frontend",
    "dev:workers": "cd cloudflare/workers && npm run dev",
    "dev:frontend": "cd app/frontend && npm run dev",
    "test": "npm run test:workers",
    "test:workers": "cd cloudflare/workers && npm test",
    "test:e2e": "cd cloudflare/workers && npm run test:e2e",
    "lint": "npm run lint:workers",
    "lint:workers": "cd cloudflare/workers && npm run lint",
    "clean": "npm run clean:workers && npm run clean:frontend",
    "clean:workers": "cd cloudflare/workers && rm -rf dist .tsbuildinfo node_modules/.vite",
    "clean:frontend": "cd app/frontend && rm -rf dist .vite node_modules/.vite"
  },
  "workspaces": [
    "cloudflare/workers",
    "app/frontend"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.886.0",
    "dotenv": "^17.2.2",
    "gray-matter": "^4.0.3"
  }
}
